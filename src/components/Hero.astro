---
interface Props {
  headline: string;
  subheadline?: string;
}

const { headline, subheadline, label } = Astro.props;
---

<div class="hero-wrapper">
  <section class="hero">
    <slot name="label" />
    <h1 set:html={headline} />
    {subheadline && <p class="subheadline">{subheadline}</p>}
    <slot />
  </section>
</div>

<style>
  .hero-wrapper {
    background: #0f172a;
    width: 100%;
    padding: 0 1.5rem;
  }

  .hero {
    text-align: left;
    padding: 3.5rem 0 3.5rem;
    max-width: 700px;
    margin: 0 auto;
    color: #f1f5f9;
  }

  h1 {
    font-size: clamp(3.25rem, 14vw, 10rem);
    font-weight: 900;
    letter-spacing: -0.04em;
    line-height: 0.9;
    margin-bottom: 1.25rem;
    color: white;
  }

  @media (min-width: 640px) {
    .hero-wrapper {
      padding: 0 1.5rem;
    }

    .hero {
      padding: 4rem 0 4rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-wrapper {
      padding: 0 2rem;
    }
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(1.5rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero > :global(*) {
    opacity: 0;
    animation: fadeSlideUp 0.6s ease-out forwards;
  }

  .hero > :global(:nth-child(1)) { animation-delay: 0.1s; }
  .hero > :global(:nth-child(2)) { animation-delay: 0.3s; }
  .hero > :global(:nth-child(3)) { animation-delay: 0.5s; }

  @media (prefers-reduced-motion: reduce) {
    .hero > :global(*) {
      opacity: 1;
      animation: none;
    }
  }

  .subheadline {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .subheadline {
      font-size: 1.5rem;
    }
  }
</style>

---
interface Props {
  headline: string;
  subheadline?: string;
}

const { headline, subheadline } = Astro.props;
---

<section class="hero">
  <h1 set:html={headline} />
  {subheadline && <p class="subheadline">{subheadline}</p>}
  <slot />
</section>

<style>
  .hero {
    text-align: center;
    padding: 2rem 1rem 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  @media (min-width: 400px) {
    h1 {
      font-size: 3rem;
    }
  }

  @media (min-width: 640px) {
    h1 {
      font-size: 4rem;
    }
  }

  @media (min-width: 1024px) {
    h1 {
      font-size: 5rem;
    }
  }

  .subheadline {
    font-size: 1.25rem;
    color: var(--muted);
    margin-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .hero {
      padding: 3rem 2rem 1.5rem;
    }

    .subheadline {
      font-size: 1.5rem;
    }
  }
</style>

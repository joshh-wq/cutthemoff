---
import Analytics from '@vercel/analytics/astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "This is how we strike. Cut off the companies supporting this regime." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script is:inline>
      if (window.location.hostname !== 'defundbillionaires.org' && window.location.hostname !== 'localhost') {
        window.location.replace('https://defundbillionaires.org' + window.location.pathname);
      }
    </script>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://defundbillionaires.org" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot name="header" />
    <slot name="hero" />
    <main id="main-content">
      <slot />
    </main>
    <slot name="footer" />
    <Analytics />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

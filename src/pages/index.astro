---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import services from '../data/services.json';

// Split services into Defund (paid) and Delete (social/free)
const socialIds = ['facebook', 'instagram', 'threads', 'tiktok', 'x'];
const defundServices = services.filter(s => !socialIds.includes(s.id));
const deleteServices = services.filter(s => socialIds.includes(s.id));

// Group defund services by owner - split into initial and more
const defundInitialOwners = ['Jeff Bezos', 'Sam Altman', 'Sundar Pichai', 'Larry Ellison'];
const defundMoreOwners = ['Tim Cook', 'Daniel Ek', 'Brian Roberts'];

const defundInitialGroups = defundInitialOwners
  .map(owner => ({
    owner,
    services: defundServices.filter(s => s.owner === owner)
  }))
  .filter(group => group.services.length > 0);

const defundMoreGroups = defundMoreOwners
  .map(owner => ({
    owner,
    services: defundServices.filter(s => s.owner === owner)
  }))
  .filter(group => group.services.length > 0);

// Group delete services by owner
const deleteOwnerOrder = ['Mark Zuckerberg', 'Elon Musk', 'Adam Presser'];

// Snarky nicknames for billionaires
const nicknames: Record<string, string> = {};
const deleteGroups = deleteOwnerOrder
  .map(owner => ({
    owner,
    services: deleteServices.filter(s => s.owner === owner)
  }))
  .filter(group => group.services.length > 0);
---

<BaseLayout title="Defund Billionaires">

  <Hero headline="<span class='headline-defund'>DEFUND</span><br/><span class='headline-billionaires'>BILLIONAIRES</span>">
    <div class="accent-bar" aria-hidden="true"></div>
    <p class="subtext intro-line">Every month, <strong><u>money from our subscriptions</u></strong> and <strong><u>ad revenue from our attention</u></strong> flows to Big Tech billionaires.</p>
    <p class="subtext intro-line">They turn around and write million-dollar checks to Trump, Republicans, and dark-money Super PACs. That money directly funds the right-wing machine that's dismantling our country.</p>
    <div class="pipeline-visual" aria-label="Our subscriptions plus ad revenue flow to billionaires which funds right-wing power">
      <div class="pipeline-node">SUBSCRIPTIONS</div>
      <span class="pipeline-plus">+</span>
      <div class="pipeline-node">AD REVENUE</div>
      <span class="pipeline-equals">=</span>
      <div class="pipeline-node pipeline-end">BILLIONAIRES FUNDING FASCISM</div>
    </div>
    <p class="subtext punch-line">It's time to cut off the pipeline.</p>
  </Hero>

  <section class="proof-section">
    <div class="proof-header">
      <div class="accent-bar" aria-hidden="true"></div>
      <h2>Defunding works.</h2>
      <p class="proof-context">In September 2025, Disney suspended Jimmy Kimmel Live! People cancelled. Here's what happened in <strong>six days</strong>:</p>
    </div>
    <div class="proof-stats">
      <div class="proof-stat">
        <span class="proof-number">3M</span>
        <span class="proof-label">subscriptions cancelled</span>
      </div>
      <div class="proof-stat">
        <span class="proof-number">436%</span>
        <span class="proof-label">spike in cancellations</span>
      </div>
      <div class="proof-stat">
        <span class="proof-number">$333M</span>
        <span class="proof-label">annual revenue lost</span>
      </div>
      <div class="proof-stat">
        <span class="proof-number">-3%</span>
        <span class="proof-label">stock price drop</span>
      </div>
    </div>
    <p class="proof-cta">That was one company, one week. Imagine all of them at once.</p>
  </section>

  <div class="defund-delete-header">
    <h2>Defund. Delete. Switch.</h2>
        <p class="bridge-stat">The only things billionaires understand? Money and power.</p>
        <p class="urgency-callout">Cancel before Q1 earnings close in:</p>

    <div class="countdown" id="countdown" aria-label="Time remaining until Q1 earnings close">
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-days">--</span>
        <span class="countdown-label">days</span>
      </div>
      <div class="countdown-separator">:</div>
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-hours">--</span>
        <span class="countdown-label">hours</span>
      </div>
      <div class="countdown-separator">:</div>
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-minutes">--</span>
        <span class="countdown-label">min</span>
      </div>
      <div class="countdown-separator">:</div>
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-seconds">--</span>
        <span class="countdown-label">sec</span>
      </div>
    </div>
  </div>

  <section class="selector">
    <!-- Step 1: Defund -->
    <div class="step-section">
      <div class="step-header">
        <span class="step-number" aria-hidden="true">1</span>
        <div class="step-info">
          <h3 class="step-title">Defund</h3>
          <p class="step-desc">Cancel our subscriptions. Each one takes a minute or less.</p>
        </div>
      </div>
      <div class="step-stats">
        <div class="step-stat">
          <span class="step-stat-number">$313M</span>
          <span class="step-stat-label">to Trump/GOP from our subscriptions</span>
        </div>
        <div class="step-stat">
          <span class="step-stat-number">100%</span>
          <span class="step-stat-label">of these tech CEOs donated to Trump's inauguration or pro-Trump Super PACs</span>
        </div>
      </div>
      <div class="owner-groups">
        {defundInitialGroups.map((group) => (
          <div class="owner-group">
            <h4 class="owner-name">{group.owner}{nicknames[group.owner] && <span class="nickname"> ({nicknames[group.owner]})</span>}</h4>
            <div class="owner-services">
              {group.services.map((service) => (
                <div class="service-item" data-id={service.id}>
                  <label class="service-checkbox">
                    <input type="checkbox" value={service.id} data-price={service.monthlyPrice} data-owner={service.owner} />
                    <span class="service-name">{service.name}</span>
                    <span class="service-price">
                      {service.monthlyPrice > 0 ? `$${service.monthlyPrice.toFixed(2)}/mo` : ''}
                    </span>
                  </label>
                  <div class="inline-steps hidden">
                    <ol>
                      {service.cancelSteps.map((step) => <li>{step}</li>)}
                    </ol>
                    <a href={service.cancelUrl} target="_blank" rel="noopener noreferrer" class="cancel-link">
                      Go to {service.name} <span class="sr-only">(opens in new tab)</span> →
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <button type="button" class="view-more-btn" id="defund-view-more" aria-expanded="false">
        View more <span class="view-more-count" data-count={defundMoreGroups.length}>({defundMoreGroups.length} more)</span>
        <svg aria-hidden="true" class="view-more-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 9l-7 7-7-7"/>
        </svg>
      </button>

      <div class="owner-groups defund-more hidden" id="defund-more-groups">
        {defundMoreGroups.map((group) => (
          <div class="owner-group">
            <h4 class="owner-name">{group.owner}{nicknames[group.owner] && <span class="nickname"> ({nicknames[group.owner]})</span>}</h4>
            <div class="owner-services">
              {group.services.map((service) => (
                <div class="service-item" data-id={service.id}>
                  <label class="service-checkbox">
                    <input type="checkbox" value={service.id} data-price={service.monthlyPrice} data-owner={service.owner} />
                    <span class="service-name">{service.name}</span>
                    <span class="service-price">
                      {service.monthlyPrice > 0 ? `$${service.monthlyPrice.toFixed(2)}/mo` : ''}
                    </span>
                  </label>
                  <div class="inline-steps hidden">
                    <ol>
                      {service.cancelSteps.map((step) => <li>{step}</li>)}
                    </ol>
                    <a href={service.cancelUrl} target="_blank" rel="noopener noreferrer" class="cancel-link">
                      Go to {service.name} <span class="sr-only">(opens in new tab)</span> →
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Step 2: Delete -->
    <div class="step-section">
      <div class="step-header">
        <span class="step-number" aria-hidden="true">2</span>
        <div class="step-info">
          <h3 class="step-title">Delete</h3>
          <p class="step-desc">Delete our accounts. Ad revenue from our time on these platforms flows straight to right-wing billionaires.</p>
        </div>
      </div>
      <div class="step-stats">
        <div class="step-stat">
          <span class="step-stat-number">$391M</span>
          <span class="step-stat-label">to Trump/GOP from ad platform owners</span>
        </div>
        <div class="step-stat">
          <span class="step-stat-number">2.5 hrs/day</span>
          <span class="step-stat-label">generates ad revenue for Trump donors</span>
        </div>
      </div>
      <div class="owner-groups">
        {deleteGroups.map((group) => (
          <div class="owner-group">
            <h4 class="owner-name">{group.owner}{nicknames[group.owner] && <span class="nickname"> ({nicknames[group.owner]})</span>}</h4>
            <div class="owner-services">
              {group.services.map((service) => (
                <div class="service-item" data-id={service.id}>
                  <label class="service-checkbox">
                    <input type="checkbox" value={service.id} data-price={service.monthlyPrice} data-owner={service.owner} />
                    <span class="service-name">{service.name}</span>
                    <span class="service-price">
                      {service.monthlyPrice > 0 ? `$${service.monthlyPrice.toFixed(2)}/mo` : ''}
                    </span>
                  </label>
                  <div class="inline-steps hidden">
                    <ol>
                      {service.cancelSteps.map((step) => <li>{step}</li>)}
                    </ol>
                    <a href={service.cancelUrl} target="_blank" rel="noopener noreferrer" class="cancel-link">
                      Go to {service.name} <span class="sr-only">(opens in new tab)</span> →
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="savings-section hidden" aria-live="polite" aria-atomic="true">
    <p class="savings-highlight">Taking back <span id="annual-savings" class="amount">$0/year</span> from <span id="owner-count" class="owner-count">0 billionaires</span></p>
  </section>


  <section class="switch-section">
    <div class="step-header">
      <span class="step-number" aria-hidden="true">3</span>
      <div class="step-info">
        <h3 class="step-title">Switch</h3>
        <p class="step-desc">Move to platforms that don't fund fascism. Bring your people with you.</p>
      </div>
    </div>

    <div class="switch-grid">
      <div class="switch-card">
        <div class="switch-replaces">Replaces Facebook, X, Threads</div>
        <h4 class="switch-name"><a href="https://bsky.app" target="_blank" rel="noopener">Bluesky</a></h4>
        <p class="switch-desc">Decentralized, open protocol, no billionaire owner. Where most of Twitter's best users went.</p>
        <a href="https://www.bluesky-migrate.com" target="_blank" rel="noopener" class="switch-migrate">Easy migrate from X →</a>
      </div>
      <div class="switch-card">
        <div class="switch-replaces">Replaces Instagram</div>
        <h4 class="switch-name"><a href="https://pixelfed.org" target="_blank" rel="noopener">Pixelfed</a></h4>
        <p class="switch-desc">Decentralized photo sharing. No algorithm, no ads, no Meta.</p>
        <a href="https://pixelfed.social/site/kb/import" target="_blank" rel="noopener" class="switch-migrate">Easy migrate from Instagram →</a>
      </div>
      <div class="switch-card">
        <div class="switch-replaces">Replaces Spotify</div>
        <h4 class="switch-name"><a href="https://tidal.com" target="_blank" rel="noopener">Tidal</a></h4>
        <p class="switch-desc">Better payouts to musicians, high-quality audio. Artists actually get paid.</p>
        <a href="https://tidal.com/transfer-music" target="_blank" rel="noopener" class="switch-migrate">Easy migrate from Spotify →</a>
      </div>
      <div class="switch-card">
        <div class="switch-replaces">Replaces ChatGPT, Gemini, Copilot</div>
        <h4 class="switch-name"><a href="https://ollama.ai" target="_blank" rel="noopener">Ollama</a></h4>
        <p class="switch-desc">Run AI models locally on your own machine. Free, private, no account needed.</p>
      </div>
      <div class="switch-card">
        <div class="switch-replaces">Replaces Amazon Prime</div>
        <h4 class="switch-name"><a href="https://bookshop.org" target="_blank" rel="noopener">Bookshop.org</a></h4>
        <p class="switch-desc">Support indie bookstores. Free shipping on orders over $10.</p>
      </div>
      <div class="switch-card">
        <div class="switch-replaces">Replaces all streaming services</div>
        <h4 class="switch-name"><a href="https://www.kanopy.com/en/signup" target="_blank" rel="noopener">Kanopy</a></h4>
        <p class="switch-desc">Free with your library card. Criterion Collection, indie films, documentaries.</p>
      </div>
      <div class="switch-card">
        <div class="switch-replaces">Replaces Amazon</div>
        <h4 class="switch-name">Shop Local</h4>
        <p class="switch-desc">Your local hardware store, home goods stores. Buying local helps your neighbors and pisses off Bezos.</p>
      </div>
      <div class="switch-card">
        <div class="switch-replaces">Replaces streaming, Audible, Kindle</div>
        <h4 class="switch-name">Get a Library Card</h4>
        <p class="switch-desc">Libraries are havens for the people. They have movies, books, magazines, and other resources.</p>
      </div>
    </div>

    <p class="switch-cta">The best way to mobilize? Invite your friends and family to these platforms. The more people who switch, the less power billionaires have.</p>

    <div class="share-buttons" role="group" aria-label="Share options">
      <a href="#" id="share-sms" class="share-btn share-sms">
        <svg aria-hidden="true" viewBox="0 0 24 24" fill="currentColor"><path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/></svg>
        Text
      </a>
      <a href="#" id="share-email" class="share-btn share-email">
        <svg aria-hidden="true" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
        Email
      </a>
      <button type="button" id="share-signal" class="share-btn share-signal">
        <svg aria-hidden="true" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>
        Signal
      </button>
      <button type="button" id="share-copy" class="share-btn share-copy">
        <svg aria-hidden="true" viewBox="0 0 24 24" fill="currentColor"><path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/></svg>
        Copy
      </button>
    </div>
    <span class="share-feedback hidden" id="share-feedback" role="status" aria-live="polite">Copied! Now paste in Signal or anywhere.</span>
    <p class="share-text hidden" id="share-text">I'm defunding billionaires who fund fascism. Join me—cancel, delete, switch. https://defundbillionaires.org</p>
  </section>

  <section class="toolkit-section">
    <div class="accent-bar" aria-hidden="true"></div>
    <h2>Toolkit</h2>
    <p class="toolkit-desc">Resources to spread the movement offline and online.</p>

    <div class="toolkit-grid">
      <div class="toolkit-card">
        <div class="toolkit-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
        </div>
        <h3>Printable Flyer</h3>
        <p>PDF with QR code. Print and post in your apartment building, coffee shop, or office.</p>
        <span class="toolkit-coming-soon">Coming soon</span>
      </div>
      <div class="toolkit-card">
        <div class="toolkit-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
        </div>
        <h3>Social Media Images</h3>
        <p>Shareable graphics for Instagram stories, Bluesky posts, and group chats.</p>
        <span class="toolkit-coming-soon">Coming soon</span>
      </div>
      <div class="toolkit-card">
        <div class="toolkit-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z"/></svg>
        </div>
        <h3>Text Templates</h3>
        <p>Copy-paste messages for group chats, emails, and DMs to get your people on board.</p>
        <span class="toolkit-coming-soon">Coming soon</span>
      </div>
    </div>
  </section>

  <!-- Sticky bottom bar for mobile -->
  <div class="sticky-bar hidden" id="sticky-bar">
    <div class="sticky-content">
      <div class="sticky-total">
        <span class="sticky-amount" id="sticky-amount">$0</span>
        <span class="sticky-label">/year</span>
      </div>
      <button type="button" class="sticky-share-btn" id="sticky-share">
        Share
        <svg aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 12v8a2 2 0 002 2h12a2 2 0 002-2v-8M16 6l-4-4-4 4M12 2v13"/>
        </svg>
      </button>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .headline-defund {
    display: block;
    font-size: 1.65em;
    letter-spacing: 0.02em;
  }

  .headline-billionaires {
    display: block;
  }

  .accent-bar {
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, #dc2626, #ea580c);
    margin: 0 0 1.5rem;
    border-radius: 2px;
  }

  .defund-delete-header .accent-bar {
    margin: 0 auto 1.5rem;
  }

  .subtext {
    font-size: 1.1rem;
    color: var(--muted);
    max-width: 600px;
    margin: 0;
    line-height: 1.6;
    letter-spacing: -0.01em;
  }

  .subtext.intro-line {
    margin-bottom: 1rem;
  }

  .subtext.intro-line.last {
    margin-bottom: 0;
  }

  .pipeline-visual {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin: 1.5rem 0 1rem;
    padding: 1rem;
    border: 1px solid var(--border);
    border-radius: 10px;
    background: var(--card-bg);
  }

  .pipeline-node {
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    padding: 0;
    background: none;
    border: none;
    color: var(--text);
  }

  .pipeline-end {
    background: none;
    border: none;
    color: #dc2626;
  }

  .pipeline-plus, .pipeline-equals {
    font-family: 'Inter', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--muted);
  }

  .pipeline-equals {
    color: #ea580c;
    font-size: 1.3rem;
  }

  @media (min-width: 640px) {
    .pipeline-node {
      font-size: 0.85rem;
      padding: 0.5rem 1rem;
    }
  }

  .subtext.punch-line {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text);
    margin: 1.25rem 0 0.5rem;
    white-space: normal;
  }

  @media (min-width: 400px) {
    .subtext.punch-line {
      font-size: 1.2rem;
    }
  }

  @media (min-width: 640px) {
    .subtext.punch-line {
      font-size: 1.3rem;
    }
  }

  .subtext.cta {
    margin-top: 1rem;
    font-size: 1.25rem;
    color: var(--text);
  }

  .facts {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .facts li {
    padding: 0.75rem 0;
    padding-left: 2rem;
    position: relative;
    color: var(--muted);
  }

  .facts li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 8px;
    background: var(--accent);
    border-radius: 50%;
  }

  .goal-callout {
    border-top: 1px solid var(--border);
    padding: 1.25rem 0;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .goal-header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    margin-bottom: 0.25rem;
  }

  .goal-icon {
    font-size: 1rem;
  }

  .goal-label {
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--muted);
  }

  .goal-target {
    font-weight: 700;
    font-size: 0.95rem;
    color: var(--text);
  }

  .goal-subtext {
    margin: 0;
    color: var(--muted);
    font-size: 0.9rem;
  }

  .proof-section {
    padding: 2rem 1rem 2.5rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .proof-header .accent-bar {
    margin-bottom: 1rem;
  }

  .proof-header h2 {
    font-size: 1.75rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
  }

  .proof-context {
    color: var(--muted);
    font-size: 1.05rem;
    margin-bottom: 1.5rem;
  }

  .proof-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .proof-stat {

  <div class="defund-delete-header">
    <h2>Defund. Delete. Switch.</h2>
        <p class="urgency-callout">Join the economic strike.<br>Q1 earnings close soon.<br>When they see the losses, they'll panic.<br>Be part of the movement that made them pay.</p>

    <div class="countdown" id="countdown" aria-label="Time remaining until Q1 earnings close">
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-days">--</span>
        <span class="countdown-label">days</span>
      </div>
      <div class="countdown-separator">:</div>
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-hours">--</span>
        <span class="countdown-label">hours</span>
      </div>
      <div class="countdown-separator">:</div>
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-minutes">--</span>
        <span class="countdown-label">min</span>
      </div>
      <div class="countdown-separator">:</div>
      <div class="countdown-unit">
        <span class="countdown-number" id="countdown-seconds">--</span>
        <span class="countdown-label">sec</span>
      </div>
    </div>
  </div>

  <section class="selector">
    <!-- Step 1: Defund -->
    <div class="step-section">
      <div class="step-header">
        <span class="step-number" aria-hidden="true">1</span>
        <div class="step-info">
          <h3 class="step-title">Defund</h3>
          <p class="step-desc">Don't fund what we fight. Pick at least one subscription. Cancel now.</p>
        </div>
      </div>
      <div class="owner-groups">
        {defundGroups.map((group) => (
          <div class="owner-group">
            <div class="owner-header">
              <h4 class="owner-name">{group.owner}{nicknames[group.owner] && <span class="nickname"> ({nicknames[group.owner]})</span>}</h4>
              {taglines[group.owner] && <span class="owner-tagline">{taglines[group.owner]}</span>}
            </div>
            <div class="owner-services">
              {group.services.map((service) => (
                <div class="service-item" data-id={service.id}>
                  <label class="service-checkbox">
                    <input type="checkbox" value={service.id} data-price={service.monthlyPrice} data-owner={service.owner} />
                    <span class="service-name">{service.name}</span>
                    <span class="service-price">
                      {service.monthlyPrice > 0 ? `$${service.monthlyPrice.toFixed(2)}/mo` : ''}
                    </span>
                  </label>
                  <div class="inline-steps hidden">
                    <ol>
                      {service.cancelSteps.map((step) => <li>{step}</li>)}
                    </ol>
                    <a href={service.cancelUrl} target="_blank" rel="noopener noreferrer" class="cancel-link">
                      Go to {service.name} <span class="sr-only">(opens in new tab)</span> →
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Step 2: Delete -->
    <div class="step-section">
      <div class="step-header">
        <span class="step-number" aria-hidden="true">2</span>
        <div class="step-info">
          <h3 class="step-title">Delete</h3>
          <p class="step-desc">In 2024, Meta, TikTok, and X made <strong>$181 billion in ad revenue</strong>. Every scroll funds fascism.</p>
        </div>
      </div>
      <div class="owner-groups">
        {deleteGroups.map((group) => (
          <div class="owner-group">
            <div class="owner-header">
              <h4 class="owner-name">{group.owner}{nicknames[group.owner] && <span class="nickname"> ({nicknames[group.owner]})</span>}</h4>
              {taglines[group.owner] && <span class="owner-tagline">{taglines[group.owner]}</span>}
            </div>
            <div class="owner-services">
              {group.services.map((service) => (
                <div class="service-item" data-id={service.id}>
                  <label class="service-checkbox">
                    <input type="checkbox" value={service.id} data-price={service.monthlyPrice} data-owner={service.owner} />
                    <span class="service-name">{service.name}</span>
                    <span class="service-price">
                      {service.monthlyPrice > 0 ? `$${service.monthlyPrice.toFixed(2)}/mo` : ''}
                    </span>
                  </label>
                  <div class="inline-steps hidden">
                    <ol>
                      {service.cancelSteps.map((step) => <li>{step}</li>)}
                    </ol>
                    <a href={service.cancelUrl} target="_blank" rel="noopener noreferrer" class="cancel-link">
                      Go to {service.name} <span class="sr-only">(opens in new tab)</span> →
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


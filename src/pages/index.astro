---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import services from '../data/services.json';
import newsItems from '../data/news.json';

const sortedNews = [...newsItems]
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 6);

// Split services into Defund (paid) and Delete (social/free)
const socialIds = ['facebook', 'instagram', 'threads', 'tiktok', 'x'];
const defundServices = services.filter(s => !socialIds.includes(s.id));
const deleteServices = services.filter(s => socialIds.includes(s.id));

// Group defund services by owner
const defundOwners = ['Jeff Bezos', 'Sam Altman', 'Sundar Pichai', 'Larry Ellison', 'Tim Cook', 'Daniel Ek'];

const defundGroups = defundOwners
  .map(owner => ({
    owner,
    services: defundServices.filter(s => s.owner === owner)
  }))
  .filter(group => group.services.length > 0);

// Group delete services by owner
const deleteOwnerOrder = ['Mark Zuckerberg', 'Elon Musk', 'Jeff Yass'];

// Snarky nicknames for billionaires
const nicknames: Record<string, string> = {};

// Taglines for each billionaire
const taglines: Record<string, string> = {
  'Jeff Bezos': 'Union buster billionaire',
  'Sam Altman': 'AI without guardrails',
  'Sundar Pichai': 'Your data, his profit',
  'Larry Ellison': 'Database for deportations',
  'Tim Cook': 'Made in sweatshops',
  'Mark Zuckerberg': 'Polarization for profit',
  'Elon Musk': 'Space Karen',
  'Jeff Yass': 'MAGA Mega-donor',
  'Daniel Ek': 'Streaming for ICE',
};
const deleteGroups = deleteOwnerOrder
  .map(owner => ({
    owner,
    services: deleteServices.filter(s => s.owner === owner)
  }))
  .filter(group => group.services.length > 0);
---

<BaseLayout title="Defund Billionaires - Join the economic strike">

  <Hero slot="hero" headline="<span class='headline-defund'>Defund</span><br/><span class='headline-billionaires'>Billionaires</span>">
    <p class="hero-label" slot="label">Join the People's Strike</p>
    <div class="intro-content">
      <p class="intro-body">We've marched. We've called. We've resisted.</p>

      <p class="intro-body intro-next">Here's what we do next:</p>
      <p class="intro-emphasis">Defund the billionaires behind fascism.</p>

      <div class="intro-equations">
        <p class="intro-equation">Every subscription is a donation to Trump.</p>
        <p class="intro-equation">Every scroll on their platforms funds fascism.</p>
      </div>

      <p class="intro-body intro-congress">Politicians won't stop them.</p>
      <p class="intro-we">WE can.</p>
    </div>

  </Hero>

  <section class="proof-section">
    <div class="proof-header">
      <div class="accent-bar" aria-hidden="true"></div>
      <h2>Defunding works.</h2>
